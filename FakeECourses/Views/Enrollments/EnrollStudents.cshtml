@model FakeECourses.ViewModel.EnrollStudentsViewModel
@{
    @ViewData["Title"] 
}
<h2>Make Enrollments</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="EnrollStudents">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Enrollment.CourseId" value="@ViewData["chosenId"]" class="form-control" readonly type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Semester" class="control-label"></label>
                <input asp-for="Enrollment.Semester" class="form-control" />
                <span asp-validation-for="Enrollment.Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.Year" class="control-label"></label>
                <input asp-for="Enrollment.Year" class="form-control" />
                <span asp-validation-for="Enrollment.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Students</label>
                <select asp-for="SelectedStudents" class="form-control js-example-basic-multiple" asp-items="Model.StudentList"></select>
                <span asp-validation-for="SelectedStudents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.Grade" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.SeminalUrl" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.SeminalUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.ProjectUrl" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.ExamPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.SeminalPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.SeminalPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.ProjectPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.ProjectPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Enrollment.AdditionalPoints" class="form-control" readonly type="hidden" />
                <span asp-validation-for="Enrollment.AdditionalPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
</div></div>
