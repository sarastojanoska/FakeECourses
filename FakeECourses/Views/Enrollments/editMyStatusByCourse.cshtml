@model FakeECourses.Models.Enrollment
@{
    @ViewData["Title"]
}
<h1>Edit</h1>
<h4>Enrollment</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Course)
    </dt>
    <dt class="col-sm-10">
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId"></a>
        @Html.DisplayFor(model => model.Course.Title)

    </dt>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Student)
    </dt>
    <dd class="col-sm-10">
        <a asp-controller="Students" asp-action="Details" asp-route-id="@Model.StudentId">
            @Html.DisplayFor(model => model.Student.FullName)
        </a>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Semester)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Semester)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Year)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Year)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ExamPoints)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ExamPoints)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.SeminalPoints)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.SeminalPoints)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ProjectPoints)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ProjectPoints)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.AdditionalPoints)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.AdditionalPoints)
    </dd>

</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Enrollments" asp-action="editMyStatusByCourse">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
           
            <div class="form-group">
                <label asp-for="ProjectUrl" class="control-label"></label>
                <input asp-for="ProjectUrl" class="form-control" />
                <span asp-validation-for="ProjectUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeminalUrl" class="control-label"></label>
                <input asp-for="SeminalUrl" class="form-control" />
                <span asp-validation-for="SeminalUrl" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="Enrollment" asp-action="MyStudentsByCourse" asp-route-id="@ViewData["crs"]">Edit Course</a>
    </div>

